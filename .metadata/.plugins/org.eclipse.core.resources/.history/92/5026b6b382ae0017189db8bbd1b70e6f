		elevation [14] = -2;
		elevation [15] = 0;
		elevation [16] = 8;
		elevation [17] = 12;
		elevation [18] = 13;
		elevation [19] = -15;
		elevation [20] = 0;
		myChart.elevation = elevation;
		
		// setup manual weighting
		manualWeighting = new double[(int) Math.ceil(myChart.distance)];  // create elevation profiles
		manualWeighting [0] = 100;
		manualWeighting [1] = 100;
		manualWeighting [2] = 100;
		manualWeighting [3] = 100;
		manualWeighting [4] = 100;
		manualWeighting [5] = 100;
